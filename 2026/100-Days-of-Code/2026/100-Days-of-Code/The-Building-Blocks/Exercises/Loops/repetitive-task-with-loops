// Write a "for" loop that will perform exactly the same repetative code as this

console.log(1)
console.log(2)
console.log(3)
console.log(4)
console.log(5)
console.log('Counting complete!')

// for loop conversion
for (var i =1; i <= 5; i++) {
    console.log(i)
}
console.log('Counting complete');

// second "for" loop example

console.log(5)
console.log(4)
console.log(3)
console.log(2)
console.log(1)
console.log('Countdown finished!');

// for loop conversion

for (var i = 5; i >= 1; i--) {
    console.log(i)
}
console.log('Countdown finished!');

// Writre a "while" loop that will perform eactly the same repetitive code as this

console.log(5)
console.log(4)
console.log(3)
console.log(2)
console.log(1)
console.log('Countdown finished!');

// first while loop conversion

var i = 5;

while (i > 0) {
    console.log(i)
    i = i - 1;
}
console.log('Countdown finished!');

// while loop conversion count up years

console.log(2018)
console.log(2019)
console.log(2020)
console.log(2021)
console.log(2022)

// conversion

var year = 2018;

while (year < 2023) {
    console.log(year)
    year++;
}
