// For access it's common ot assign it to a variable

var user = {}; // create an object

// now the variable 'user' holds the object, 
// and you can add properties and manipulate it in various ways.

// Here's one such previously built object.

var assistantManager = {
    rangeTilesPerTurn: 3,
    socialSkills: 30,
    streetSmarts: 30,
    health: 40,
    specialAbility: "young and ambitious",
    greeting: "Let's make some money"
}
console.log(assistantManager);

// example using table object

var table = {
    legs: 3,
    color: "brown",
    priceUSD: 100,
}
console.log(table); // display the object in the developer console
// The returned value is the entire table object.

// Additionally, I can console log any individual properties .color, .priceUSD, legs, etc..

var table = {
    legs: 3,
    color: "brown",
    priceUSD: 100,
}
console.log(table.color); // 'brown'

// can build any other object in a similar way.

var house = {
    rooms: 3,
    color: "brown",
    priceUSD: 10000,
}
console.log(house.priceUSD);

// Alternative approach of building objects is to first save an empty object literal to a variable, 
// the use of the dot notion to declare new properties on the fly, 
// and use the assignment operator to add values to thos properties.

var house2 = {}
house2.rooms = 4;
house2.color = "pink";
house2.priceUSD = 12345;
console.log(house2); //option one returns house assignment operators values
house.widows = 10;
console.log(house2); //option two shows the same thing also adding properties that are updatable.
/*
// Flexbility additonally means that I can update already existing properties, not jsut new ones.
house.windows = 11;
console.log(house); // { rooms: 3, color: 'brown', priceUSD: 10000, widows: 10, windows: 11 }
*/