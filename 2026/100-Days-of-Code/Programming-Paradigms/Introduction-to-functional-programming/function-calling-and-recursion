// Function calling and recursion

function example() {
    console.log('line one');
    console.log('line two');
    console.log('line three');
}
example() // 'line one' 'line two' 'line three'


// How to write recursion funtions without them running endlessly.
let counter = 3;
function example() {
   console.log(counter);
   counter = counter - 1;
   if (counter === 0) return;
   example();
}
example() // countdown of 3 2 1
