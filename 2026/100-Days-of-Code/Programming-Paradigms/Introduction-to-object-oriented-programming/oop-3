// OOP 3: this keyword example

var purchase1 = {
    shoes: 100,
    stateTax: 1.2,
    totalPrice: function() {
        var calculation = this.shoes * this.stateTax;
        console.log('Total price:' , calculation);
    }
}
purchase1;


//when using 'this' keyword it's best when you want to refer to the object itself without specifying the name.
