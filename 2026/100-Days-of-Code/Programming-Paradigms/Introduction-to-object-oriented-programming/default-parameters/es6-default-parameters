// Consider a function declaration without default parameters set.
/*
function noDefaultParams(number) {
    console.log('Result:', number * number) // --> noDefaultParams function should return whatever number it recieves, squared
}
noDefaultParams(); // Result: NaN (not a number)
*/
//javascript doesn't throw an error but instead returns a NaN because number is undefined by default.

//Consider the following improvement

function withDefualtParams(number = 10) {
    console.log('Result:', number * number) 
}
withDefualtParams(); // Result: 100
//even if no argument is passed, the function will default to 10.

class WithDefaultParams {
    constructor(num1 = 1, num2 = 2, num3 = 3, string1 = "Result", bool1 = true) {
        this.num1 = num1;
        this.num2 = num2;
        this.num3 = num3;
        this.string1 = string1;
        this.bool1 = bool1;
    }
    calculate() {
        if(this.bool1) {
            console.log(this.string1, this.num1 + this.num2 + this.num3);
            return;
        }
        return "The value of bool1 is incorrect"
    }
}
var better = new WithDefaultParams();
better.calculate(); // Result: 6