/* Break statement example

for (let i = 1; i <= 5; i++) {
    if (i === 3) {
        break; // Stops when i is 3
    }
    console.log(i);
}
// Output: 1, 2

/* if else example

if(light == "green") {
    console.log("Drive")
} else if (light == "orange") {
    console.log("Get ready")
} else if (light == "red") {
    console.log("Dont' drive")
} else {
    //this block will run if no condition matches
    console.log("The light is not gree, orange, or red");
}
*/
//converting the previous if-else example sith switch-case

switch(light) {
    case 'green':
        console.log("Drive");
    case 'orange':
        console.log("Get ready");
    case 'red':
        console.log("Don't drive");
    default:
        //this block will run if no condtion matches
        console.log('The light is not green, orange, or red');
}